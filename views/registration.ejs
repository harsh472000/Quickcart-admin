<html>

<head>
  <title>Registration Page Design</title>

  <link rel="stylesheet" type="text/css" href="../../css/sign.css">
  
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
</head>

<body>
  <div class="container">
    <div class="row">
      <div class="col-md-10 offset-md-1">
        <div class="row">
          <div class="col-md-5 register-left">
            <img src="../../img/icon.png" height="100px" width="100px">
            <h3>Join Us</h3>
            <p>Be a part of our family join us earn and grow more
            </p>
            <button type="button" class="btn btn-primary">About
              Us</button>
          </div>
          <form class="pt-3" action="/registration" method="post">
            <%- include('../views/partials/message.ejs') %>
            <div class="register-form">
              <div class="form-group">
                <p>User Name</p>
                <input type="text" name="uname" class="form-control form-control-lg" id="exampleInputUsername1"
                  placeholder="Username" value="<%= typeof uname!='undefined'?uname:'' %>">
              </div>
              <div class="form-group">
                <p>Email Adress</p>
                <input type="email" name="email" class="form-control form-control-lg" id="exampleInputEmail1"
                  placeholder="Email Address" value="<%= typeof email!='undefined'?email:'' %>">
              </div>
              <div class="form-group">
                <p>Password</p>
                <input type="password" name="passwd" class="form-control form-control-lg" id="exampleInputPassword1"
                  placeholder="Password" value="<%= typeof passwd!='undefined'?passwd:'' %>">
              </div>
              <div class="form-group">
                <p>Confirm Password</p>
                <input type="password" name="confpass" class="form-control form-control-lg" id="exampleInputPassword2"
                  placeholder="Password" value="<%= typeof confpass!='undefined'?confpass:'' %>">
              </div>
              <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">
                SignUp
              </button>
              <div class="text-center mt-4 font-weight-light">
                Already have an account? <a href="/" class="text-primary">..</a>
              </div>
            </div>

          </form>
</body>

</html>
